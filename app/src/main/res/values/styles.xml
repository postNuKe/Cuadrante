<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Theme.SIGO" parent="Theme.Sherlock.Light.DarkActionBar">
        <item name="vpiTitlePageIndicatorStyle">@style/Theme.SIGO.TitlePageIndicator</item>
        <item name="vpiTabPageIndicatorStyle">@style/Theme.SIGO.TabPageIndicator</item>
        <item name="textColorPrimary">#AA000000</item>
        <item name="android:textColor">#AA000000</item>   
        
        <item name="actionBarWidgetTheme">@null</item><!-- para que los submenus no estén de fondo negros por el darkactionbar -->
        <!-- <item name="android:actionBarWidgetTheme">@null</item> --><!-- para que los submenus no estén de fondo negros por el darkactionbar -->
        
    </style>

    <style name="Theme.SIGO.TitlePageIndicator">
        <item name="android:background">#18FF0000</item>
        <item name="footerColor">#FFAA2222</item>
        <item name="footerLineHeight">1dp</item>
        <item name="footerIndicatorHeight">3dp</item>
        <item name="footerIndicatorStyle">underline</item>
        <item name="android:textColor">#AA000000</item>
        <item name="selectedColor">#FF000000</item>
        <item name="selectedBold">true</item>
    </style>

    <style name="Theme.SIGO.TabPageIndicator" parent="Widget.TabPageIndicator">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#FFB33E3E</item>
    </style>



