<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/comisionsList2"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/line_a"
            style="@style/list_item_line_a" />

        <LinearLayout
            android:id="@+id/line_b"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/line_b_a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"                
                style="@style/list_item_line_b" />

            <TextView
                android:id="@+id/line_b_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="0"                
                style="@style/list_item_line_b" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/line_c"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/line_c_a"
                style="@style/list_item_line_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/eighty_percent"
                android:textStyle="bold" />

            <TextView
                android:visibility="gone"
                android:id="@+id/line_c_b"
                style="@style/list_item_line_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="0"
                android:text="@string/twenty_percent"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal" >

        	<TextView
                 android:id="@+id/line_d"
                 style="@style/list_item_line_b_normal"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text=""
                 android:visibility="gone" />
    	</LinearLayout>

    </LinearLayout>

</RelativeLayout>