<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="horizontal">

	<LinearLayout 
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical">
		<TextView android:id="@+id/line_a"
		    style="@style/servicio_list_item_line_a"/>
		<TextView android:id="@+id/line_b"
		    style="@style/servicio_list_item_line_b"/>
        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />        		 
	</LinearLayout>
	
	<LinearLayout 
	    android:id="@+id/layout_square_color"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:visibility="invisible"
		android:orientation="vertical">
		<TextView android:id="@+id/square_color"
			android:layout_width="25dp"
			android:layout_gravity="right|center_vertical"
			android:layout_height="match_parent"/>
	</LinearLayout>
	<LinearLayout 
	    android:id="@+id/layout_checkbox"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:visibility="invisible"
		android:orientation="vertical">

		<CheckBox
		    android:id="@+id/checkBox"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
    		android:focusable="false"		
		    android:layout_gravity="right|center_vertical"/>

	</LinearLayout>
</RelativeLayout>